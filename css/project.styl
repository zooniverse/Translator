.project
  @extend .col-md-12
  @extend .col-sm-12
  
  button
    background: #FFFFFF
    border: 1px solid #BBBBBB
    border-radius: 3px
    box-shadow: 0 1px 0 #FFFFFF inset, 0 1px 3px rgba(0, 0, 0, 0.25)
    font-size: 12px
    font-weight: bold
    margin: 0 5px
    padding: 3px 10px
    
    &:active
      border-color: rgba(0, 0, 0, 0.25)
      box-shadow: 0 100px rgba(0, 0, 0, 0.125) inset
  
  ul
    list-style: none outside none
    padding-left: 0
    margin: 0
    
    li
      button()
      margin-left: 5px
      line-height: 24px
      
      &.active
        box-shadow: 0 0 0 1px #333333
        background-color: #A9E79C
  
  .header
    margin: 20px 0 15px 0
    box-shadow: 0 1px 0 0 rgba(0, 0, 0, 0.13), 0 2px 0 0 rgba(255, 255, 255, 0.87)
    
    h1
      display: inline-block
      margin: 0
      font-size: 30px
      font-weight: 100
      text-shadow: 0 1px 2px #878787
      vertical-align: middle
    
    .locales
      display: inline-block
      margin: 0 10px
      vertical-align: middle
  
  .messages
    height: 30px
    
    .message
      @extend .col-md-10
      @extend .col-sm-10
      @extend .col-md-offset-1
      @extend .col-sm-offset-1
      
      height: 30px
      text-align: center
      vertical-align: middle
      white-space: pre-wrap
  
  .content
    @extend .container
    
    .types
      @extend .col-md-2
      @extend .col-sm-4
      
      ul li
        display: block
        margin-bottom: 20px
        
        &.deploy
          position: relative
          margin-bottom: 40px
    
    .translations
      @extend .col-md-10
      @extend .col-sm-8
  
  h3
    font-size: 20px
    font-weight: 100
    text-shadow: 0 1px 2px #878787
    text-align: center
